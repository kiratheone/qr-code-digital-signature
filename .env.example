# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=digital_signature
DB_USER=postgres
DB_PASSWORD=password
DB_SSL_MODE=disable

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-in-production

# RSA Keys for Digital Signatures (base64 encoded)
PRIVATE_KEY=your-private-key-here
PUBLIC_KEY=your-public-key-here

# Server Configuration
PORT=8000

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8065

# Frontend Configuration
# For local development
NEXT_PUBLIC_API_URL=http://localhost:8000
# For Docker development (uncomment and adjust if needed)
# NEXT_PUBLIC_API_URL=http://localhost:8112
# For production (set to your actual API domain)
# NEXT_PUBLIC_API_URL=https://your-api-domain.com